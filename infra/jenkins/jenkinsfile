pipeline {
  agent any

  stages {
    stage('Checkout') {
      steps {
        echo "Workspace: ${env.WORKSPACE}"
        checkout scm
        sh "ls -l ${WORKSPACE}/infra/kaniko/"
      }
    }
    stage('Debug') {
      steps {
        script {
          echo "빌드할 job 리스트:"
          def jobs = ['server', 'web', 'ws']
          for (job in jobs) {
            echo "Job: ${job}"
          }
        }
      }
    }
  }
}

